    {
      "name": "https://blossom-dream-api-development.blossomdev.com/transactions/exceptions/pending",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// 1. Validar Código de Estado y Formato",
              "pm.test(\"Status 200 - OK\", function () {",
              "    pm.response.to.have.status(200);",
              "    pm.response.to.be.json;",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "",
              "// 2. Validar Estructura General",
              "pm.test(\"Estructura base: requestId y data presentes\", function () {",
              "    pm.expect(jsonData).to.have.property('requestId');",
              "    pm.expect(jsonData.data).to.have.property('results').and.be.an('array');",
              "});",
              "",
              "// 3. Validar existencia de todas las propiedades en los objetos del array",
              "pm.test(\"Cada objeto en 'results' tiene todas las propiedades requeridas\", function () {",
              "    const results = jsonData.data.results;",
              "    ",
              "    // Validamos el primer elemento como muestra de la estructura",
              "    if (results.length > 0) {",
              "        const item = results[0];",
              "        ",
              "        // Lista de propiedades que deben existir",
              "        const propiedadesEsperadas = [",
              "            \"id\", \"name\", \"memberNumber\", \"description\", \"amount\", ",
              "            \"exception\", \"entryType\", \"source\", \"settlementDate\", ",
              "            \"fromAccount\", \"toAccountId\", \"transactionId\", \"status\", \"debitCredit\"",
              "        ];",
              "",
              "        propiedadesEsperadas.forEach(prop => {",
              "            pm.expect(item, `Falta la propiedad: ${prop}`).to.have.property(prop);",
              "        });",
              "",
              "        // Validación de la sub-estructura fromAccount (si no es null)",
              "        if (item.fromAccount !== null) {",
              "            const fromAccountProps = [\"id\", \"number\", \"code\", \"cards\", \"cardCount\"];",
              "            fromAccountProps.forEach(subProp => {",
              "                pm.expect(item.fromAccount).to.have.property(subProp);",
              "            });",
              "        }",
              "    } else {",
              "        pm.expect.fail(\"El array 'results' está vacío, no se pudo validar la estructura interna.\");",
              "    }",
              "});",
              "",
              "// 4. Validar propiedades de paginación",
              "pm.test(\"Campos de paginación presentes\", function () {",
              "    pm.expect(jsonData.data).to.have.property('totalRecords');",
              "    pm.expect(jsonData.data).to.have.property('totalPages');",
              "    pm.expect(jsonData.data).to.have.property('currentPage');",
              "});",
              ""
            ],
